        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/app_main_drak_color" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/app_main_drak_color" />
            <corners android:radius="5dp" />
            <solid android:color="@color/app_main_color" />
        </shape>

    </item>
</selector>


